<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:EEGame.Extensions"
             x:Class="EEGame.Pages.MainPage">
    <ContentPage.Content>
        <AbsoluteLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <Image Source="{extensions:ImageResource EEGame.Images.MainBackground.jpg}"
                   Aspect="Fill"
                   AbsoluteLayout.LayoutBounds="0,0,1,1"
                   AbsoluteLayout.LayoutFlags="All"/>

            <Button Text="Start Game" Command="{Binding StartGameCommand}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.3,.5,.07" Style="{StaticResource buttonstyle}"/>
            <Button Text="Continue" Command="{Binding ContinueCommand}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.4,.5,.07" Style="{StaticResource buttonstyle}"/>
            <Button Text="Settings" Command="{Binding OpenSettingsCommand}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.5,.5,.07" Style="{StaticResource buttonstyle}"/>
            <Button Text="History" Command="{Binding OpenHistoryCommand}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.6,.5,.07" Style="{StaticResource buttonstyle}"/>
            <StackLayout/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>